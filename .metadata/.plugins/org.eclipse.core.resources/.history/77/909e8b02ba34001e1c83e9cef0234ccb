<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- HandlerMapping  // setter 주입-->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/main.do">main</prop> <!-- main.do 요청이면 main 객체 반환 -->
				<prop key="/login.do">login</prop>
				<prop key="/logout.do">logout</prop>
				<prop key="/insertBoardPage.do">insertBoardPage</prop>
				<prop key="/insertBoard.do">insertBoard</prop>
			</props>
		</property>
	</bean>
	
	<!-- Contoller -->
	<bean class="com.spring.view.controller.MainController" id="main"/> <!-- main 객체는 MainController로 보냄 -->
	<bean class="com.spring.view.controller.LoginController" id="login"/>
	<bean class="com.spring.view.controller.LogoutController" id="logout"/>
	<bean class="com.spring.view.controller.InsertBoardPage" id="insertBoardPage"/>
	<bean class="com.spring.view.controller.InsertBoard" id="insertBoard"/>
	
	<!-- ViewResolver -->
   <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
   	<property name="prefix" value="/WEB-INF/view/"></property>
   	<property name="suffix" value=".jsp"></property>
   </bean>
   	
   
</beans>
